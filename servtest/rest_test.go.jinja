package main

import (
	"encoding/json"
	"net/http"
	"net/http/httptest"
	"testing"

	"{{ app_name }}/apis"
	"{{ app_name }}/models"
	"{{ app_name }}/models/user"

	log "github.com/Golang-Tools/loggerhelper"
	"github.com/gin-gonic/gin"
	"github.com/stretchr/testify/assert"
)

const DBURL = "sqlite://:memory:"

func setupRouter() *gin.Engine {
	r := gin.Default()
	r.RedirectTrailingSlash = true
	apis.Init(r)
	models.Init(DBURL)
	return r
}

func TestPingRoute(t *testing.T) {
	router := setupRouter()

	w := httptest.NewRecorder()
	req, _ := http.NewRequest("GET", "/ping", nil)
	router.ServeHTTP(w, req)
	assert.Equal(t, 200, w.Code)
	assert.Equal(t, "pong", w.Body.String())
}
func TestListGetRoute(t *testing.T) {
	router := setupRouter()

	w := httptest.NewRecorder()
	req, _ := http.NewRequest("GET", "/v{{ version | replace(".", "_") }}/api/{{ namespace }}", nil)
	router.ServeHTTP(w, req)
	assert.Equal(t, 200, w.Code)
	log.Info("get response", log.Dict{"body": w.Body.String()})
	// json.Unmarshal(,)
	assert.Contains(t, w.Body.String(), "测试api,User总览")
}

func TestGetRoute(t *testing.T) {
	router := setupRouter()

	w := httptest.NewRecorder()
	req, _ := http.NewRequest("GET", "/v{{ version | replace(".", "_") }}/api/{{ namespace }}/1", nil)
	router.ServeHTTP(w, req)
	assert.Equal(t, 200, w.Code)
	log.Info("get response", log.Dict{"body": w.Body.String()})
	u := user.User{}
	json.Unmarshal(w.Body.Bytes(), &u)
	assert.Contains(t, u.Name, "admin")
}
